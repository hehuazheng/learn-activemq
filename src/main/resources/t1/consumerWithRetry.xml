<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:amq="http://activemq.apache.org/schema/core" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
		http://activemq.apache.org/schema/core http://activemq.apache.org/schema/core/activemq-core-5.5.0.xsd">
	<amq:connectionFactory id="jmsConnectionFactory"
		brokerURL="failover:(tcp://secooActivemq01.secoolocal.com:61616,tcp://secooActivemq02.secoolocal.com:61616)?randomize=false">
		<amq:prefetchPolicy>
			<amq:prefetchPolicy queuePrefetch="5" />
		</amq:prefetchPolicy>
		<amq:redeliveryPolicy>
			<amq:redeliveryPolicy redeliveryDelay="3000"
				maximumRedeliveries="2" />
		</amq:redeliveryPolicy>
	</amq:connectionFactory>

	<amq:queue id="q1" physicalName="q1" />
	<bean id="jmsConverter" class="com.secoo.jms.utility.JMSMessageConverter" />
	<bean id="q1Consumer" class="com.hzz.activemq.t1.Q1ConsumerWithRetry" />
    <bean id="q1ConsumerListener" class="com.secoo.jms.utility.JMSMessageListener">
        <property name="consumer" ref="q1Consumer"/>
        <property name="convertor" ref="jmsConverter"/> 
    </bean> 
    <bean class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="connectionFactory" ref="jmsConnectionFactory"/>
        <property name="destination" ref="q1"/>
        <property name="messageListener" ref="q1ConsumerListener"/>
        <property name="sessionTransacted" value="true"/>  
    </bean>
</beans>
